  <main>
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
        <div class="row">
            <div class="col-md-3">
                <h2>User info</h2>
                <%= image_tag @user.get_profile_image(100,100) %>

                <table class="table">
                    <tbody>
                        <tr></tr>
                        <tr>

                            <th>name</th>
                            <th><%= current_user.name %></th>
                        </tr>
                        <tr>
                            <th>introduction</th>
                            <th></th>
                        </tr>
                    </tbody>
                </table>
                <div class="row">
                 <%= link_to "edit", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_path" %>
                </div>

                <% if @book.errors.any? %>
                    <%= @book.errors.count %>
                    <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
                <% end %>

                <h2>New book</h2>
                <%= form_with model: @book, local:true do |f| %>
                <div class="form-group">
                    <h4>Title</h4>
                    <%= f.text_field:title %>
                </div>
                <div class="form-group">
                    <h4>Opinion</h4>
                    <p><%= f.text_area:body %></p>
                </div>
                <div class="form-group">
                    <p><%= f.submit "Create Book" %></p>
                </div>
                <% end %>
            </div>
            <div class="col-lg-8 offset-lg-1">
                <h2>Books</h2>
                <table class="table table-hover table-inverse">
                    <tr>
                        <th><%= @books.title %></th>
                        <th><%= @books.body %></th>
                        <th><%= link_to "edit", edit_book_path(book) %></th>
                        <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "Are you sure?" } %></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</main>