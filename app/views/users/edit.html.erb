<main>
    <p id="notice"></p>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">


                    <% if @user.errors.any? %>

                        <%= @user.errors.count %>errors prohibited this obj from being saved:

                        <% @user.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>

                    <% end %>

                    <% if @user.id == current_user.id %>
                        <%= link_to edit_user_path(current_user.id) do %>
                            <div class= " edit btn btn-outline-secondary btn-default btn-block" >
                                <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                            </div>
                        <% end %>
                    <% end %>

                    <h1>User info</h1>
                    <%= form_with model: @user, method: :patch do |f| %>
                    <div class="form-group">
                        <h4>Name</h4>
                        <p><%= f.text_field :name %></p>
                    </div>
                    <div class="form-group">
                        <h4>image</h4>
                        <p> <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
                    </div>
                    <div class="form-group">
                        <h4>Introduction</h4>
                        <p><%= f.text_area :introduction %></p>
                    </div>
                    <div class="form-group">
                       <%= f.submit 'Update User' %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
</main>